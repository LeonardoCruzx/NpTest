@model NpTest.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row my-5 text-center">
        <h2>Welcome back to Bidding system!</h2>
    </div>
    <div class="row mt-5">
        <div class="col-4"></div>

        <div class="col-4 p-4 shadow shadow-md">
            <form class="row p-2" asp-controller="Account" asp-action="Login" method="post">
                <input class="col-12 py-2 my-2" type="text" asp-for="UserName" placeholder="username" />
                <input class="col-12 py-2 my-2" type="password" asp-for="Password" placeholder="password" />
                <button type="submit" class="btn btn-primary col-12">Sign in</button>
            </form>
        </div>

        <div class="col-4"></div>
    </div>
</div>